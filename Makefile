LIBS=-lscuff -lopenblas -lgomp -lgfortran

##################################################
##################################################
##################################################
GLMT-scatter:		GLMT-scatter.o GLMTSolver.o
			$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)
